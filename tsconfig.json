{
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./dist", "./src/**/*.test.ts", "mocks"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "node16",
    "declaration": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  }
}
